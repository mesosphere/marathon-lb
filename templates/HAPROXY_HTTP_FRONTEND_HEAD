frontend marathon_http_in
  bind *:80
  mode http
  acl host_mesos hdr(host) -i mesos.dev.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_mesos
  acl host_marathon hdr(host) -i marathon.dev.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_marathon
  acl host_consul hdr(host) -i consul.dev.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_consul
  acl host_singularity hdr(host) -i singularity.dev.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_singularity
  acl host_mesos hdr(host) -i mesos.prod.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_mesos
  acl host_marathon hdr(host) -i marathon.prod.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_marathon
  acl host_consul hdr(host) -i consul.prod.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_consul
  acl host_singularity hdr(host) -i singularity.prod.nutmeg.co.uk
  redirect scheme https code 301 if !{ ssl_fc } host_singularity
